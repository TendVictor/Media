<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_playback"
    android:gravity="bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_music_title"
        android:text="!!!!!!!!!!!!!!"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="200dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/sb_musicbar"
        android:indeterminate="false"
        android:background="@drawable/voice_seekbar_bg"
        android:progressDrawable="@drawable/bg_seekbar_progress"
        android:thumb="@drawable/bg_seekbarthumb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_duration"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="lalal" />

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_current"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="5555555555555555"/>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/bt_musicprevious"
            android:background="@drawable/bg_btn_previous"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_shuffle"
            android:background="@drawable/bg_btn_shufflenone"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/bt_musicplay"
            android:background="@drawable/bg_btn_pause"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_repeat"
            android:background="@drawable/bg_btn_repeatall"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/bt_musicnext"
            android:background="@drawable/bg_btn_next"/>
    </LinearLayout>

</LinearLayout>